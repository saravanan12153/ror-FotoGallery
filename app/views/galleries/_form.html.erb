<%= simple_form_for(@gallery) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: 'Gallery Name', input_html: {class: 'form-control input-lg'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>
